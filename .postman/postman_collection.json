					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"electionGuardConfig\": {\n        \"numberOfSelections\": {{ballot_numberOfSelections}},\n        \"numberOfTrustees\": {{trustee_count}},\n        \"threshold\": {{trustee_threshold}},\n        \"subgroupOrder\": 0,\n        \"electionMetadata\": \"some_metadata\",\n        \"jointPublicKey\": \"{{jointPublicKey}}\"\n    },\n    \"trusteeKeys\": {{trustee_keys}},\n    \"encryptedBallotsFileName\": \"{{ballots_filename}}\",\n    \"exportPath\": \"~/election_results/tallies\",\n    \"exportFileNamePrefix\": \"my_election_tallies\"\n}",
					"options": {
